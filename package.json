{
	"name": "vtex-backend-oca",
	"version": "1.5.0",
	"description": "Integration between oca and vtex",
	"main": "dist/index.js",
	"author": "Conexa",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"install:all": "yarn install --frozen-lockfile",
		"start": "node --experimental-modules --es-module-specifier-resolution=node dist/index.js",
		"start:local": "cross-env NODE_ENV=development node --experimental-modules --es-module-specifier-resolution=node ./dist/index.js",
		"dev": "tsc-watch --onSuccess \"yarn start:local\"",
		"build": "tsc --build",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest -i --colors --verbose --detectOpenHandles --passWithNoTests",
		"test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest -i --watchAll --passWithNoTests",
		"coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest -i --coverage",
		"lint": "eslint .",
		"prettier": "prettier --check **/*.ts",
		"prettier:fix": "prettier --write .",
		"commit": "git add -A && cz",
		"release": "standard-version",
		"release:first": "standard-version --first-release",
		"release:minor": "standard-version --release-as minor",
		"release:patch": "standard-version --release-as patch",
		"release:major": "standard-version --release-as major"
	},
	"keywords": [],
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@jest/globals": "^29.5.0",
		"@types/axios": "^0.14.4",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "2.8.13",
		"@types/crypto-js": "^4.1.1",
		"@types/express": "^4.17.17",
		"@types/html-entities": "^1.3.4",
		"@types/jest": "^29.5.0",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/morgan": "^1.9.4",
		"@types/node": "^24.0.3",
		"@types/supertest": "^2.0.12",
		"@types/validator": "^13.7.14",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"coveralls": "^3.1.1",
		"eslint": "^8.36.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-security": "^1.7.1",
		"jest": "^29.5.0",
		"lint-staged": "^13.2.0",
		"node-mocks-http": "^1.12.2",
		"prettier": "^2.8.6",
		"supertest": "^6.3.3",
		"ts-jest": "^29.0.5",
		"tsc-watch": "^6.0.0",
		"typescript": "^5.0.2"
	},
	"dependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@ryansonshine/commitizen": "^4.2.8",
		"@ryansonshine/cz-conventional-changelog": "^3.3.4",
		"@types/express-serve-static-core": "^4.17.33",
		"@types/swagger-ui-express": "^4.1.3",
		"axios": "^1.10.0",
		"conexa-core-server": "file:conexa-dependencies/conexa-core-server-1.1.6.tgz",
		"cors": "^2.8.5",
		"cron": "^2.4.0",
		"cross-env": "^7.0.3",
		"crypto-js": "^4.1.1",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-mongo-sanitize": "^2.2.0",
		"helmet": "^6.0.1",
		"html-entities": "^2.6.0",
		"http-status": "^1.6.2",
		"jsonwebtoken": "^9.0.0",
		"merge-pdf-buffers": "^1.0.3",
		"mongoose": "^7.3.4",
		"morgan": "^1.10.0",
		"oca-package": "file:conexa-dependencies/oca-package-4.0.9.tgz",
		"playwright": "^1.53.1",
		"standard-version": "^9.5.0",
		"swagger-ui-express": "^4.6.2",
		"validator": "^13.9.0",
		"vtex-package-ts": "file:conexa-dependencies/vtex-package-ts-0.1.10.tgz",
		"winston": "^3.8.2",
		"xss-clean": "^0.1.1"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/@ryansonshine/cz-conventional-changelog"
		}
	}
}
